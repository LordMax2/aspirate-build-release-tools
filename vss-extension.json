{
    "manifestVersion": 1,
    "id": "build-release-task",
    "name": "Aspir8 build and release tools",
    "version": "0.0.8",
    "publisher": "klevebrand-industries",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tools for building/releasing .NET Aspire applications with Aspir8.",
    "categories": [
